<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="davidrowantechnologies.sosapp.SendMessage">

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

    <TextView
        android:text="Your Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/dateTimeInput"
        android:textSize="18sp"
        android:hint="Ex. 11/23/2018"
        android:background="@color/wallet_dim_foreground_disabled_holo_dark"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/clothesInput"
        android:textSize="18sp"
        android:hint="Ex. A red hoodie"
        android:inputType="textShortMessage"
        android:backgroundTint="@color/place_autocomplete_prediction_primary_text_highlight"
        android:background="@color/wallet_dim_foreground_disabled_holo_dark"
        android:layout_below="@+id/wearingText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="What are you wearing?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wearingText"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_below="@+id/dateTimeInput"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Local Landmarks?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clothesInput"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/textView12"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/nameInput"
        android:textSize="18sp"
        android:background="@color/wallet_dim_foreground_disabled_holo_dark"
        android:hint="ex. John Smith"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Date and Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/nameInput"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/LansdmarksInput"
        android:textSize="18sp"
        android:hint="Ex. A Rock, A waterfall"
        android:inputType="textShortMessage"
        android:background="@color/wallet_dim_foreground_disabled_holo_dark"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="What were you doing?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/LansdmarksInput"
        android:layout_alignParentStart="true" />

    <EditText
        android:ems="10"
        android:id="@+id/emerInput"
        android:inputType="textMultiLine"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:hint="ex. I was walking along route 63 and fell down the side of the road."
        android:singleLine="false"
      android:layout_height="wrap_content"

        android:backgroundTint="@color/place_autocomplete_search_hint"
        android:background="@color/cast_intro_overlay_button_background_color"
        android:drawableBottom="@color/colorAccent"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
